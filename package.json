{
  "name": "omnidesk-ai",
  "version": "2.0.0",
  "private": true,
  "description": "OmniDesk AI CRM monorepo (Docker-free)",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "concurrently -n backend,frontend -c cyan,magenta \"npm run dev --workspace backend\" \"npm run dev --workspace frontend\"",
    "dev:backend": "npm run dev --workspace backend",
    "dev:frontend": "npm run dev --workspace frontend",
    "build": "npm run build --workspace backend && npm run build --workspace frontend",
    "start": "npm run start --workspace backend",
    "verify:production": "node scripts/production-verify.mjs",
    "backup:create": "node scripts/db-backup.mjs",
    "backup:verify": "node scripts/db-backup-verify.mjs",
    "backup:restore": "node scripts/db-restore.mjs"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
